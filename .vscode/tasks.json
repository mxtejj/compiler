{
  "version": "2.0.0",
  "command": "",
  "args": [],
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "windows": {
        "command": "${workspaceFolder}/build.bat debug",
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "Build Release",
      "type": "shell",
      "windows": {
        "command": "${workspaceFolder}/build.bat release",
      },
      "group": "build",
    }
  ]
}
